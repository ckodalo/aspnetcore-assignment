
@model WaitingPageViewModel;
<div class="container mt-5">
    <div class="card text-center">
        <div class="card-body">
            <h2 class="card-title">Waiting Page</h2>

            <p class="card-text">Ticket Number: @Model.TicketNumber</p>
            <p class="card-text">Service Point: @Model.ServicePointName</p>

            <p class="card-text text-muted">You are waiting for your ticket to be called. Please be patient.</p>

            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">Back to Home</a>
        </div>
    </div>
</div>
