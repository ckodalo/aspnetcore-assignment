<script>
    document.addEventListener("DOMContentLoaded", function () {
        var successMessage = '@Html.Raw(Model.SuccessMessage)';

        if (successMessage && successMessage.length > 0) {
            successMessage = successMessage.replace('{ticketId}', '@Model.CurrentTicketNumber');

            document.getElementById('successMessage').innerText = successMessage;
            document.getElementById('successMessage').style.display = 'block';

            setTimeout(function () {
                document.getElementById('successMessage').style.display = 'none';
            }, 5000);
        }
    });

    function confirmMarkAction(action, buttonText) {
        if (confirm(`You haven't called the ticket yet. Are you sure you want to ${action}?`)) {
            alert(`Please call the ticket first before trying to ${buttonText}.`);
            return false;
        }
        return false;
    }
</script>
