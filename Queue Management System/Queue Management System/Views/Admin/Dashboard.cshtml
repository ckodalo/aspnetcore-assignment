@model DashboardViewModel

<h2>Admin Dashboard</h2>

<div>
    @Html.Partial("_ServicePointsPartial", Model.ServicePoints)
</div>

<div>
    @Html.Partial("_ServiceProvidersPartial", Model.ServiceProviders)
</div> 

<div class="mt-4">
    <h4 class="mb-3">Generate Analytical Report</h4>
    <div>
        <p class="mb-3">Generate an analytical report for your dashboard. Click the button below to download the report.</p>
        <button class="btn btn-primary" onclick="location.href='@Url.Action("DownloadReport", "Admin", @Model)'">Download Report</button>
    </div>
</div>

<div class="mt-3">
    <div class="d-flex">
        <form asp-action="Logout" asp-controller="Account" method="post">
            <button type="submit" class="btn btn-sm btn-secondary">Logout</button>
        </form>
    </div>
</div>
